<div class="modal" tabindex="-1" role="dialog" id="createAuthModal" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Create Auth</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<form method="post" action="/api/auth">
					{{#if roles}}
						<div class="form-group">
							<label for="create-auth-role">Role</label>
							<select class="form-control" id="create-auth-role" name="role">
								{{#each roles}}
								<option value="{{this._id}}">{{this.name}}</option>
								{{/each}}
							</select>
						</div>
					{{else}}
						<div class="alert alert-danger" role="alert">Please create roles before continuing.</div>
					{{/if}}
					{{#if resources}}
						<div class="form-group">
							<label for="create-auth-role">Resource</label>
							<select class="form-control" id="create-auth-role" name="resource">
								{{#each resources}}
								<option value="{{this._id}}">{{this.name}}</option>
								{{/each}}
							</select>
						</div>
					{{else}}
						<div class="alert alert-danger" role="alert">Please create resources before continuing.</div>
					{{/if}}
					{{#if permissions}}
						<div class="form-group">
							<label for="create-auth-role">Permission</label>
							<select class="form-control" id="create-auth-role" name="permission">
								{{#each permissions}}
								<option value="{{this._id}}">{{this.method}}</option>
								{{/each}}
							</select>
						</div>
					{{else}}
						<div class="alert alert-danger" role="alert">Please create permissions before continuing.</div>
					{{/if}}
				</form>
				<div class="alert alert-danger d-none" role="alert"></div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-primary">Create</button>
				<button type="button" class="btn btn-secondary" data-dismiss="modal">Dismiss</button>
			</div>
		</div>
	</div>
</div>